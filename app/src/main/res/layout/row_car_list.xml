<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_margin="5dp"
  app:cardCornerRadius="4dp"
  android:elevation="2dp"
  app:cardBackgroundColor="@color/colorBackLight">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/image_car_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/audir8"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="15dp"
      android:layout_marginRight="15dp"/>

    <TextView
      android:id="@+id/text_car_model"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/modelo"
      android:layout_below="@+id/image_car_pic"
      android:layout_alignStart="@+id/image_car_pic"
      android:layout_alignLeft="@+id/image_car_pic"
      android:layout_marginTop="5dp"
      android:textAllCaps="true"
      android:textStyle="bold"
      android:textSize="10sp"/>

    <TextView
      android:id="@+id/text_car_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ver_detalhes"
      android:layout_below="@+id/image_car_pic"
      android:layout_alignRight="@+id/image_car_pic"
      android:layout_alignEnd="@+id/image_car_pic"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="10dp"
      android:textAllCaps="true"
      android:textStyle="bold"
      android:textSize="15sp"
      android:textColor="@color/colorAccent"/>

  </RelativeLayout>




</android.support.v7.widget.CardView>
